<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Soundomatic.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="500"
        x:Class="Soundomatic.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/Soundomatic.ico"
        Title="Soundomatic"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        Width="500"
        Height="500">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Border BorderThickness="4" BorderBrush="#2C1B3C"
            CornerRadius="10" PointerPressed="MainBorder_PointerPressed">
        
        <Grid Background="#FF1D1A20" RowDefinitions="Auto,Auto,*,*" PointerPressed="Content_PointerPressed">

            <!-- Title Bar -->
            <DockPanel Grid.Row="0" Height="50" Background="Transparent">
                
                <!-- Logo -->
                <TextBlock Text="SOUNDOMATIC"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource PageNameBrush}"
                           VerticalAlignment="Center"
                           Margin="16,8,0,0"
                           DockPanel.Dock="Left" />

                <!-- Control Buttons -->
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0">
                    
                    <!-- Button -->
                    <Button Name="ManageSoundSetsButton"
                            Classes="BaseButton"
                            Click="ManageSoundSetsButton_Click">
                        
                        <!-- Button Icon -->
                        <StackPanel Orientation="Horizontal" Spacing="5">
                                <Image Source="/Assets/Icons/Upload.png"
                                       Width="22" 
                                       Height="22"
                                       VerticalAlignment="Center"/>
                                
                                <TextBlock Text="Управление звуками"
                                           FontSize="14"
                                           Foreground="#FFFFFF"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        
                    </Button>
                    
                    <!-- Button -->
                    <Button Name="MinimizeButton"
                            Click="MinimizeButton_Click"
                            Content="—"
                            Margin="6,0,0,0"
                            Width="28" Height="28"
                            FontSize="14" FontWeight="Bold"
                            Background="Transparent" BorderThickness="0" Foreground="#FFFFFF"
                            VerticalAlignment="Center"/>
                    
                    <!-- Button -->
                    <Button Name="CloseButton"
                            Click="CloseButton_Click"
                            Content="✕"
                            Width="28" Height="28"
                            FontSize="14" FontWeight="Bold"
                            Background="Transparent" BorderThickness="0" Foreground="#FFFFFF"
                            VerticalAlignment="Center"/>
                </StackPanel>
                
            </DockPanel>

            <!-- Separator Line -->
            <Rectangle Grid.Row="1" Height="2" Fill="#2C1B3C" Margin="0" />

            <!-- Main Content Area -->
            <!-- Your commented-out ListBox and other content would go here -->
            <!-- For example, to bring back your ListBox section: -->
            <!--
            <Grid Grid.Row="2" RowDefinitions="Auto,*" Margin="10">
                <TextBlock Text="Звуковые пакеты"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <ListBox Grid.Row="1"
                         ItemsSource="{Binding SoundPacks}"
                         Background="Transparent"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Image Width="32" Height="32"
                                       Source="{Binding IconData, Converter={StaticResource ByteArrayToImageConverter}}"
                                       IsVisible="{Binding IconData, Converter={StaticResource NotNullToBoolConverter}}"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                             FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="{Binding Sounds.Count, StringFormat='{}{0} звуков'}"
                                             Foreground="Gray"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
            -->
            
            <!-- Border -->
            <Border Grid.Row="2" Classes="LinkButtonContainer">

                <!-- Button -->
                <Button Name="LinkButton" Classes="LinkButton"> 
                        
                    <!-- StackPanel -->
                    <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center">
                        <TextBlock Text="+"
                                   FontSize="28"
                                   Foreground="#FFFFFF"
                                   VerticalAlignment="Center"/>
                                
                        <TextBlock Text="Добавить клавишу"
                                   FontSize="16"
                                   Foreground="#FFFFFF"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                        
                </Button>
            </Border>
            
            <TextBlock Grid.Row="3" Text="Main Content Area Placeholder"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="White"/>
        </Grid>
    </Border>
</Window>