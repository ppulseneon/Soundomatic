<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:Soundomatic.Converters"
             x:Class="Soundomatic.App"
             xmlns:local="using:Soundomatic"
             RequestedThemeVariant="Default">
    
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://Soundomatic/Assets/Styles/SharedResources.axaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />
            <converters:NotNullToBoolConverter x:Key="NotNullToBoolConverter" />
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
            <converters:BindingStatusToStringConverter x:Key="StatusToStringConverter" />
        </ResourceDictionary>
    </Application.Resources>
    
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Soundomatic/Assets/Styles/SharedStyles.axaml"/>
    </Application.Styles>
    
</Application>